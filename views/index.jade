extend layout
block content
    div(id="main")
        h3(class="caption") Noticias
        each item_news in data.news.rows
            div(class="article")
                div(class="author")
                    a(href="#{item_news.href}",target="_self") #{item_news.title}
                    div(class="date") #{item_news.date}
        h3(class="caption") Art√≠culo
        each item_articles in data.articles.rows
            div(class="article")
                div(class="author")
                    a(href="#{item_articles.href}",target="_self") #{item_articles.title}
                    div(class="date") #{item_articles.date}
